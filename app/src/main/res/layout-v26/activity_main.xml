<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   android:scrollbarAlwaysDrawVerticalTrack="true"
                                                   android:id="@+id/constraintLayout">
    <TextView
            android:text="@string/acessar_conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titleLogin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="80dp"
            android:layout_marginStart="8dp"
            style="@style/TitleTheme"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText
            style="@style/TextBox"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/titleLogin"
            android:hint="@string/e_mail"
            android:autofillHints=""/>

    <EditText
            style="@style/TextBox"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtSenha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail"
            android:hint="Senha" android:importantForAutofill="no"/>
    <Button
            android:text="@string/login"
            android:id="@+id/btnEntrar"
            style="@style/PrimaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSenha"/>
    <Button
            android:text="@string/recuperar_senha"
            android:id="@+id/btnResetarSenha"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEntrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/SecondaryButton"
    />
    <Button
            android:text="@string/criar_conta"
            android:id="@+id/button3"
            style="@style/SecondaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnResetarSenha"/>
    <TextView
            android:text="@string/ou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            style="@style/ParagraphTheme"

            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnEntrar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnResetarSenha"/>


</androidx.constraintlayout.widget.ConstraintLayout>