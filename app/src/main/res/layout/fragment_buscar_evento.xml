<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".evento.BuscarEventoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="Buscar eventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            style="@style/TitleStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="Todos"
            android:id="@+id/btnTodos"
            style="@style/PrimaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
    />

    <Button
            android:text="Categoria"
            android:id="@+id/btnCategoria"
            app:layout_constraintTop_toBottomOf="@+id/btnTodos"
            style="@style/SecondaryButton"
            android:layout_marginTop="@dimen/marginSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <Button
            android:text="Nome"
            android:id="@+id/btnNome"
            app:layout_constraintTop_toBottomOf="@+id/btnCategoria"
            style="@style/SecondaryButton"
            android:layout_marginTop="@dimen/marginSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>