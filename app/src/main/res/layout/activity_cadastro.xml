<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:scrollbarAlwaysDrawVerticalTrack="true"
                                                   android:id="@+id/scrollView2"
                                                   style="@style/AppTheme"
>
    <TextView
            android:text="Cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title"
            style="@style/TitleTheme"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNome"
            style="@style/TextBox"
            android:hint="Nome" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
    <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail"
            style="@style/TextBox"
            android:hint="Email" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtNome"/>
    <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            style="@style/TextBox"
            android:id="@+id/txtConfirmarEmail"
            android:hint="Confirmar Email" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtEmail"/>
    <EditText
            android:inputType="number"
            android:ems="10"
            style="@style/TextBox"
            android:id="@+id/numCpf"
            android:hint="CPF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtConfirmarEmail"/>
    <EditText
            android:inputType="date"
            android:ems="10"
            style="@style/TextBox"
            android:id="@+id/dateDataNascimento"
            android:hint="Data de Nascimento" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/numCpf"/>
    <EditText
            android:inputType="textPassword"
            android:ems="10"
            style="@style/TextBox"
            android:id="@+id/txtSenha"
            android:hint="Senha" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/dateDataNascimento"/>
    <EditText
            android:inputType="textPassword"
            android:ems="10"
            style="@style/TextBox"
            android:id="@+id/txtConfirmarSenha"
            android:hint="Confirmar senha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtSenha"/>
    <Button
            android:text="Cadastrar"
            android:id="@+id/btnCadastrar"
            style="@style/PrimaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtConfirmarSenha"/>
</androidx.constraintlayout.widget.ConstraintLayout>
