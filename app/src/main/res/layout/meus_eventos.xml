<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        style="@style/TextBox"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txtDataEvento"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="13/07/1998"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/txtNomeEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome do evento"
                    android:layout_marginTop="15dp"
                    style="@style/SubTitleStyle"
            />

            <TextView
                    android:id="@+id/txtCategoriaEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoria do evento"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/txtNomeEvento"
                    style="@style/ParagraphStyle"
                    android:textColor="@color/colorAccent"
            />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
